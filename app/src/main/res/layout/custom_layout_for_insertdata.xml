<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:elevation="5dp">

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          android:background="@color/transparent"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="AMOUNT: "/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/amount_edit"
                        android:hint="Amount here"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:height="48dp"/>
                </RelativeLayout>



            </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:layout_margin="10dp"
                  android:gravity="center">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:text="PAYMENT METHOD: "/>

              </RelativeLayout>
              <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:layout_margin="10dp">

                  <Spinner
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/payment_edit"
                      android:background="@drawable/edittext_background"
                      android:textColor="@color/black"
                      android:padding="2dp"
                      android:entries="@array/paytypes" />
              </RelativeLayout>

          </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="TYPE: "/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/type_edit"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:entries="@array/typesIn" />


                    <!--<EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Salary,Payment,Food,Transport"
                        android:id="@+id/type_edit"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:background="@drawable/edittext_background"
                        android:height="48dp"/-->


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTE: "
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/note_edit"
                        android:hint="enter description here"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:background="@drawable/edittext_background"
                        android:height="48dp"/>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:id="@+id/btn_cancel"
                        android:paddingVertical="10dp"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/yell"
                        android:backgroundTint="@color/black"
                        style="@style/MyButtonStyle"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:backgroundTint="#FFF"
                        android:paddingVertical="10dp"
                        style="@style/MyButtonStyle"
                        android:id="@+id/btn_add"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#F2CB2E"
                        android:textStyle="bold"/>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>